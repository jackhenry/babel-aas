{
  "env": {
    "browser": true
  },
  "extends": [
    "preact",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "build/*",
    "postcss.config.js",
    "preact.config.js",
    "tailwind.config.js"
  ],
  "rules": {
    "semi": "error",
    "quotes": "error"
  }
}